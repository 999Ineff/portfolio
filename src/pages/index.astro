---
import BaseLayout from '../layouts/BaseLayout.astro';
import SectionLabel from '../components/SectionLabel.astro';
import CTA from '../components/CTA.astro';
import { services } from '../data/services';
import { stats, projects } from '../data/stats';
---

<BaseLayout title="Custom Software. Tailored Websites. Zero Busywork.">
  <!-- Hero Section -->
  <section class="hero section-lg">
    <div class="container hero-inner">
      <div class="hero-badge glass reveal">
        <span class="badge-dot"></span>
        <span class="badge-text font-mono">Available for Projects</span>
      </div>

      <h1 class="hero-title reveal" data-delay="0.1">
        <span class="hero-title-line">
          <span class="title-word gradient-text-gold">I</span><span class="title-reveal">neffable</span>
        </span>
        <span class="hero-title-line">
          <span class="title-word gradient-text-gold">S</span><span class="title-reveal">olutions</span>
        </span>
      </h1>

      <p class="hero-tagline font-mono reveal glass" data-delay="0.2">
        <span class="text-gold">Custom Software. Tailored Websites. Zero Busywork.</span>
      </p>

      <p class="hero-sub reveal" data-delay="0.3">
        I build what others outsource — from 30-minute Excel fixes to full AI automation
        systems. <strong class="text-text">If it's manual and repetitive, I make it disappear.</strong>
      </p>

      <div class="hero-actions reveal" data-delay="0.4">
        <a href="#work" class="btn btn-primary">See What I Build</a>
        <a href="https://calendly.com/luis-aviles-khn" class="btn btn-outline" target="_blank" rel="noopener">
          Tell Me Your Problem
        </a>
      </div>

      <!-- Stats Bar -->
      <div class="stats-bar glass-panel reveal" data-delay="0.5">
        {stats.map(stat => (
          <div class="stat">
            <span class={`stat-value text-${stat.color}`}>{stat.value}</span>
            <span class="stat-label font-mono">{stat.label}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Services Overview -->
  <section class="section" id="services">
    <div class="container">
      <div class="section-header">
        <SectionLabel text="What I Build" />
        <h2 class="text-heading reveal">From quick fixes to complete systems</h2>
      </div>

      <div class="services-grid">
        {services.map((service, i) => (
          <a href={service.href} class="service-card card reveal" data-delay={`${i * 0.1}`}>
            <div class={`service-icon text-${service.color}`}>{service.icon}</div>
            <h3 class="service-title">{service.title}</h3>
            <p class="service-desc">{service.description}</p>
            <span class={`service-stat font-mono text-${service.color}`}>{service.stats}</span>
            <span class="service-arrow">→</span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Featured Projects -->
  <section class="section-lg" id="work">
    <div class="container">
      <div class="section-header">
        <SectionLabel text="Proof, Not Promises" color="cyan" />
        <h2 class="text-heading reveal">Real systems solving real problems</h2>
      </div>

      {projects.map((project, i) => (
        <div class={`project-showcase ${i % 2 === 1 ? 'project-reverse' : ''} reveal`}>
          <div class="project-info">
            <SectionLabel text={project.category} color={i === 0 ? 'gold' : i === 1 ? 'cyan' : 'green'} />
            <h3 class="project-title">{project.title}</h3>
            <p class="project-desc text-body">{project.description}</p>
            <div class="project-stats">
              {project.stats.map(stat => (
                <div class="project-stat">
                  <span class="project-stat-value text-cyan font-mono">{stat.value}</span>
                  <span class="project-stat-label font-mono">{stat.label}</span>
                </div>
              ))}
            </div>
            <div class="project-tags">
              {project.tags.map(tag => (
                <span class="project-tag font-mono">{tag}</span>
              ))}
            </div>
          </div>
          <div class="project-media">
            {project.image ? (
              <img src={project.image} alt={project.title} loading="lazy" class="project-image" />
            ) : project.youtube ? (
              <div class="project-video-wrap">
                <iframe
                  src={`https://www.youtube-nocookie.com/embed/${project.youtube}?rel=0&modestbranding=1&iv_load_policy=3&playsinline=1`}
                  title={project.title}
                  loading="lazy"
                  allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                  allowfullscreen
                  class="project-video"
                ></iframe>
              </div>
            ) : null}
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- Time Savings Section -->
  <section class="section-lg reality-section">
    <div class="container-narrow">
      <div class="section-header" style="text-align: center;">
        <SectionLabel text="The Reality" />
        <h2 class="text-heading reveal" style="text-align: center;">You're Losing More Time Than You Think</h2>
        <p class="text-body reveal" data-delay="0.1" style="text-align: center; max-width: 700px; margin: 1rem auto 0;">
          It's not that you chose manual work. You just don't know there's another way.
        </p>
      </div>

      <div class="math-card card reveal" data-delay="0.2">
        <div class="math-label font-mono tag" style="text-align: center; margin: 0 auto 2rem;">The Math</div>
        <div class="math-grid">
          <div class="math-employees">
            <div class="math-employee">
              <span class="math-emp-name text-gold font-mono">Employee A</span>
              <span class="math-emp-task">Recurring task</span>
              <span class="math-emp-time font-mono">~10 min/day</span>
            </div>
            <div class="math-employee">
              <span class="math-emp-name text-gold font-mono">Employee B</span>
              <span class="math-emp-task">Reformatting data</span>
              <span class="math-emp-time font-mono">~15 min/day</span>
            </div>
            <div class="math-employee">
              <span class="math-emp-name text-gold font-mono">Employee C</span>
              <span class="math-emp-task">Manual entry</span>
              <span class="math-emp-time font-mono">~25 min/day</span>
            </div>
          </div>
          <div class="math-result">
            <div class="math-flow">
              <span class="math-flow-item font-mono">~5 hrs<br /><small>per week</small></span>
              <span class="math-flow-arrow">→</span>
              <span class="math-flow-item font-mono">20 hrs<br /><small>per month</small></span>
              <span class="math-flow-arrow">→</span>
              <span class="math-flow-item math-flow-highlight font-mono text-gold">240 hrs<br /><small>per year</small></span>
            </div>
            <p class="math-punchline">That's <span class="text-gold font-mono">six full work weeks</span> gone to tasks that could run themselves.</p>
          </div>
        </div>
      </div>

      <div class="reality-closer reveal" data-delay="0.3">
        <p class="text-body" style="text-align: center; font-size: var(--text-lg);">
          Now multiply that across your whole team. Connect those fixes so systems talk to each other.
          Suddenly you're not saving minutes — <strong class="text-gold">you're getting back entire workdays.</strong>
        </p>
      </div>
    </div>
  </section>

  <CTA
    heading="Tell Me Your Repetitive Task"
    subtext="I'll show you how to eliminate it — or at least cut it in half."
    secondaryText="Or explore what I build"
    secondaryLink="/automation"
  />
</BaseLayout>

<style>
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding-top: calc(var(--nav-height) + 2rem);
    text-align: center;
  }

  .hero-inner {
    display: flex;
    flex-direction: column;
    align-items: center;
    max-width: 900px;
    margin: 0 auto;
    position: relative;
    z-index: 2;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.6rem 1.5rem;
    border-radius: 100px;
    margin-bottom: var(--space-md);
  }

  .badge-dot {
    width: 8px;
    height: 8px;
    background: var(--green);
    border-radius: 50%;
    box-shadow: 0 0 10px rgba(0, 255, 136, 0.4);
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%, 100% { transform: scale(1); opacity: 1; }
    50% { transform: scale(1.5); opacity: 0.7; }
  }

  .badge-text {
    font-size: var(--text-xs);
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--text-secondary);
  }

  .hero-title {
    font-size: var(--text-display);
    font-weight: 900;
    line-height: 1.05;
    margin-bottom: 2rem;
    letter-spacing: -0.02em;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .hero-title-line {
    display: flex;
    align-items: center;
    justify-content: center;
    line-height: 1;
  }

  .title-word { 
    display: inline-block;
    opacity: 0;
    transform: translateY(20px);
    animation: slideUpFade 0.8s var(--ease-spring) forwards;
  }
  
  .title-word.gradient-text-gold {
    animation-delay: 0.2s; /* 'I' and 'S' appear first */
  }

  .title-reveal {
    display: inline-block;
    color: var(--text);
    opacity: 0;
    transform: translateY(20px);
    animation: slideUpFade 0.8s var(--ease-spring) forwards;
    animation-delay: 0.8s; /* The rest of the words appear later */
  }

  @keyframes slideUpFade {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .hero-tagline {
    font-size: var(--text-sm);
    color: var(--text-dim);
    margin-bottom: 2rem;
    padding: 0.5rem 1.5rem;
    border-radius: 100px;
    border: 1px solid rgba(255, 193, 59, 0.15);
    background: rgba(255, 193, 59, 0.03);
    letter-spacing: 0.05em;
  }

  .hero-sub {
    font-size: var(--text-lg);
    color: var(--text-dim);
    max-width: 700px;
    margin-bottom: var(--space-md);
    line-height: 1.6;
    font-weight: 300;
  }

  .hero-actions {
    display: flex;
    gap: 1.5rem;
    flex-wrap: wrap;
    justify-content: center;
    margin-bottom: var(--space-xl);
  }

  .stats-bar {
    display: flex;
    gap: 4rem;
    padding: 2.5rem 4rem;
    width: 100%;
    justify-content: space-around;
  }

  .stat { display: flex; flex-direction: column; align-items: center; gap: 0.5rem; }
  .stat-value { font-family: 'JetBrains Mono', monospace; font-size: var(--text-3xl); font-weight: 700; text-shadow: 0 0 20px rgba(255, 255, 255, 0.1); }
  .stat-label { font-size: var(--text-xs); letter-spacing: 0.12em; text-transform: uppercase; color: var(--text-dim); }

  .section-header { margin-bottom: var(--space-lg); }

  /* Bento Grid for Services */
  .services-grid { 
    display: grid; 
    grid-template-columns: repeat(2, 1fr); 
    gap: 2rem; 
  }

  .service-card { 
    display: flex; 
    flex-direction: column; 
    gap: 1.25rem; 
    text-decoration: none; 
    padding: 3rem; 
    border-radius: 24px;
    background: var(--bg-glass);
    transition: all 0.5s var(--ease-spring);
  }
  
  .service-card:hover {
    transform: translateY(-8px) scale(1.02);
  }

  .service-icon { 
    font-size: 2.5rem; 
    width: 64px; 
    height: 64px; 
    display: flex; 
    align-items: center; 
    justify-content: center; 
    border-radius: 16px;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.05);
    box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.1);
  }
  .service-title { font-size: var(--text-lg); font-weight: 700; }
  .service-desc { font-size: var(--text-sm); color: var(--text-dim); line-height: 1.6; flex: 1; }
  .service-stat { font-size: var(--text-xs); letter-spacing: 0.05em; }
  .service-arrow { font-size: 1.25rem; color: var(--text-muted); transition: all 0.3s; }
  .service-card:hover .service-arrow { color: var(--gold); transform: translateX(4px); }

  .project-showcase { 
    display: grid; 
    grid-template-columns: 1fr 1.2fr; 
    gap: 0; 
    align-items: center; 
    margin-bottom: var(--space-xl); 
    position: relative;
  }
  
  .project-showcase.project-reverse { 
    grid-template-columns: 1.2fr 1fr; 
    direction: rtl; 
  }
  
  .project-showcase.project-reverse > * { 
    direction: ltr; 
  }
  
  .project-info {
    z-index: 2;
    padding: 3rem;
    border-radius: 24px;
    background: rgba(10, 10, 15, 0.6);
    backdrop-filter: blur(24px);
    -webkit-backdrop-filter: blur(24px);
    border: 1px solid rgba(255, 255, 255, 0.08);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.5);
    transform: translateX(2rem); /* Overlap effect */
  }

  .project-showcase.project-reverse .project-info {
    transform: translateX(-2rem);
  }

  .project-title { font-size: var(--text-2xl); font-weight: 800; margin-bottom: 1rem; line-height: 1.1; }
  .project-desc { margin-bottom: 2rem; color: var(--text-secondary); }
  
  .project-stats { 
    display: flex; 
    flex-wrap: wrap;
    gap: 2rem; 
    margin-bottom: 2rem; 
    padding-bottom: 1.5rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .project-stat { display: flex; flex-direction: column; gap: 0.25rem; }
  .project-stat-value { font-size: var(--text-xl); font-weight: 700; color: var(--text); }
  .project-stat-label { font-size: var(--text-xs); letter-spacing: 0.12em; text-transform: uppercase; color: var(--text-dim); }
  
  .project-tags { display: flex; flex-wrap: wrap; gap: 0.75rem; }
  .project-tag { 
    font-size: 0.7rem; 
    padding: 0.4rem 1rem; 
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.1); 
    color: var(--text-dim); 
    letter-spacing: 0.05em; 
    font-family: 'JetBrains Mono', monospace; 
    border-radius: 100px;
  }
  
  .project-media { 
    border-radius: 24px;
    border: 1px solid rgba(255, 255, 255, 0.1); 
    overflow: hidden; 
    background: var(--bg-card);
    transform: scale(0.95);
    box-shadow: 0 30px 60px rgba(0, 0, 0, 0.6);
    transition: transform 0.5s var(--ease-out);
  }

  .project-showcase:hover .project-media {
    transform: scale(0.98);
  }
  
  .project-image { width: 100%; display: block; filter: brightness(0.9) contrast(1.1); transition: filter 0.5s; }
  .project-showcase:hover .project-image { filter: brightness(1) contrast(1.1); }
  
  .project-video-wrap { position: relative; padding-bottom: 56.25%; height: 0; overflow: hidden; }
  .project-video { position: absolute; top: 0; left: 0; width: 100%; height: 100%; border: none; }

  .reality-section { background: transparent; }
  
  .math-card { 
    padding: 0; 
    margin: var(--space-md) 0; 
    border-radius: 24px;
    background: rgba(10, 10, 15, 0.4);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.05);
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
  }
  
  .math-card-header {
    padding: 2rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    background: rgba(255, 255, 255, 0.02);
  }
  
  .math-label { 
    font-size: 0.75rem;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--gold);
    background: rgba(255, 193, 59, 0.1);
    padding: 0.5rem 1.5rem;
    border-radius: 100px;
    display: inline-block;
    border: 1px solid rgba(255, 193, 59, 0.2);
  }
  
  .math-grid { 
    display: flex; 
    flex-direction: column; 
  }
  
  .math-employees { 
    display: grid; 
    grid-template-columns: repeat(3, 1fr); 
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  }
  
  .math-employee { 
    display: flex; 
    flex-direction: column; 
    gap: 0.5rem; 
    text-align: center; 
    padding: 3rem 2rem; 
    border-right: 1px solid rgba(255, 255, 255, 0.05);
    position: relative;
    transition: background 0.3s var(--ease-out);
  }
  
  .math-employee:last-child {
    border-right: none;
  }
  
  .math-employee:hover {
    background: rgba(255, 255, 255, 0.02);
  }
  
  .math-emp-name { font-size: var(--text-base); color: var(--gold); }
  .math-emp-task { font-size: var(--text-sm); color: var(--text-dim); }
  .math-emp-time { 
    font-size: var(--text-xl); 
    color: var(--text); 
    margin-top: 1rem;
    font-weight: 600; 
  }
  
  .math-result {
    padding: 3rem 2rem;
    background: linear-gradient(180deg, transparent 0%, rgba(255, 193, 59, 0.03) 100%);
  }
  
  .math-flow { 
    display: flex; 
    align-items: center; 
    justify-content: center; 
    gap: 2rem; 
    margin-bottom: 2rem; 
  }
  
  .math-flow-item { 
    font-size: var(--text-xl); 
    text-align: center; 
    color: var(--text-secondary);
  }
  
  .math-flow-item small { 
    display: block; 
    font-size: var(--text-xs); 
    color: var(--text-dim); 
    text-transform: uppercase; 
    letter-spacing: 0.15em; 
    margin-top: 0.5rem;
  }
  
  .math-flow-highlight { 
    font-size: var(--text-3xl); 
    font-weight: 800; 
    color: var(--gold);
    text-shadow: 0 0 20px rgba(255, 193, 59, 0.2);
  }
  
  .math-flow-arrow { 
    color: rgba(255, 255, 255, 0.1); 
    font-size: 2rem; 
    font-weight: 300;
  }
  
  .math-punchline { 
    text-align: center; 
    font-size: var(--text-lg); 
    color: var(--text-secondary); 
  }
  
  .reality-closer { margin-top: var(--space-xl); }

  @media (max-width: 1024px) {
    .services-grid { grid-template-columns: repeat(2, 1fr); }
    .project-showcase { grid-template-columns: 1fr; }
    .project-showcase.project-reverse { direction: ltr; }
    .project-info { transform: translateX(0); }
    .project-showcase.project-reverse .project-info { transform: translateX(0); }
    .stats-bar { gap: 2rem; padding: 1.5rem 2rem; }
  }

  @media (max-width: 768px) {
    .hero { min-height: auto; padding-top: calc(var(--nav-height) + 2rem); padding-bottom: 2rem; }
    .stats-bar { flex-wrap: wrap; gap: 1.5rem; justify-content: center; }
    .math-employees { grid-template-columns: 1fr; border-bottom: none; }
    .math-employee { border-right: none; border-bottom: 1px solid rgba(255, 255, 255, 0.05); padding: 2rem; }
    .math-employee:last-child { border-bottom: none; }
    .math-flow { flex-wrap: wrap; gap: 1rem; }
    .project-stats { gap: 1rem; }
  }

  @media (max-width: 480px) {
    .services-grid { grid-template-columns: 1fr; }
    .hero-actions { flex-direction: column; width: 100%; }
    .hero-actions .btn { width: 100%; }
  }
</style>

<script>
  import gsap from 'gsap';

  function initHeroAnimations() {
    if (window.matchMedia('(prefers-reduced-motion: reduce)').matches) return;

    const reveals = document.querySelectorAll('.title-reveal');
    if (!reveals.length) return;

    gsap.set(reveals, { display: 'inline-block', overflow: 'hidden', whiteSpace: 'nowrap', width: 0 });

    gsap.to(reveals, {
      width: 'auto',
      duration: 1.4,
      delay: 0.6,
      ease: 'power3.out',
    });
  }

  initHeroAnimations();
  document.addEventListener('astro:after-swap', initHeroAnimations);
</script>
