---
import BaseLayout from '../layouts/BaseLayout.astro';
import SectionLabel from '../components/SectionLabel.astro';
import CTA from '../components/CTA.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog'))
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());

function formatDate(dateStr: string) {
  return new Date(dateStr).toLocaleDateString('en-US', {
    month: 'short',
    day: 'numeric',
    year: 'numeric',
  });
}
---

<BaseLayout
  title="Blog"
  description="Thoughts on automation, AI, operations, and building custom software. Originally shared on LinkedIn."
>
  <!-- Hero -->
  <section class="hero section-lg">
    <div class="container hero-inner">
      <SectionLabel text="Blog" />
      <h1 class="text-heading reveal">Insights</h1>
      <p class="hero-sub reveal" data-delay="0.1">
        Thoughts on automation, AI, operations, and building custom software.
        Originally shared on LinkedIn.
      </p>
    </div>
  </section>

  <!-- Blog Grid -->
  <section class="section" id="posts">
    <div class="container">
      <div class="blog-grid">
        {posts.map((post, i) => (
          <a href={`/blog/${post.id}`} class="blog-card card reveal" data-delay={`${i * 0.1}`} transition:name={`blog-card-${post.id}`}>
            <div class="blog-card-inner">
              <div class="blog-card-meta">
                <span class={`blog-category tag tag-${post.data.categoryColor === 'gold' ? '' : post.data.categoryColor}`}>
                  {post.data.category}
                </span>
                <span class="blog-date font-mono">{formatDate(post.data.date)}</span>
              </div>
              <h3 class="blog-card-title" transition:name={`blog-title-${post.id}`}>{post.data.title}</h3>
              <p class="blog-card-excerpt">{post.data.excerpt}</p>
              {post.data.linkedIn && (
                <span class="blog-card-source font-mono">
                  <span class="source-dot"></span>
                  Originally posted on LinkedIn
                </span>
              )}
              <span class="read-more font-mono">Read more â†’</span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- More Coming -->
  <section class="section">
    <div class="container-narrow">
      <div class="more-coming reveal">
        <p class="more-coming-text">
          More insights coming soon. Follow me on
          <a href="https://www.linkedin.com/in/luisaviles1" target="_blank" rel="noopener" class="linkedin-link">
            LinkedIn
          </a>
          for real-time updates.
        </p>
      </div>
    </div>
  </section>

  <CTA heading="Have a Question About Automation?" />
</BaseLayout>

<style>
  .hero {
    min-height: auto;
    padding-top: calc(var(--nav-height) + var(--space-xl));
    padding-bottom: var(--space-lg);
    text-align: center;
  }

  .hero-inner {
    display: flex;
    flex-direction: column;
    align-items: center;
    max-width: 750px;
    margin: 0 auto;
  }

  .hero-sub {
    font-size: var(--text-lg);
    color: var(--text-dim);
    max-width: 600px;
    line-height: 1.7;
  }

  /* Blog Grid */
  .blog-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-md);
  }

  .blog-card {
    display: block;
    cursor: pointer;
  }

  .blog-card-inner {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    height: 100%;
  }

  .blog-card-meta {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
  }

  .blog-category {
    font-size: 0.65rem;
    padding: 0.3rem 0.75rem;
  }

  .blog-date {
    font-size: var(--text-xs);
    color: var(--text-muted);
    letter-spacing: 0.05em;
  }

  .blog-card-title {
    font-size: var(--text-xl);
    font-weight: 700;
    line-height: 1.3;
  }

  .blog-card-excerpt {
    font-size: var(--text-sm);
    color: var(--text-dim);
    line-height: 1.7;
    flex: 1;
  }

  .blog-card-source {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: var(--text-xs);
    color: var(--text-muted);
    letter-spacing: 0.05em;
    padding-top: 0.75rem;
    border-top: 1px solid var(--border);
  }

  .source-dot {
    width: 6px;
    height: 6px;
    background: #0a66c2;
    border-radius: 50%;
    flex-shrink: 0;
  }

  .read-more {
    font-size: var(--text-xs);
    color: var(--gold);
    letter-spacing: 0.05em;
    opacity: 0;
    transform: translateX(-8px);
    transition: all var(--duration-base) var(--ease-out);
  }

  .blog-card:hover .read-more {
    opacity: 1;
    transform: translateX(0);
  }

  /* More Coming */
  .more-coming {
    text-align: center;
    padding: var(--space-lg) var(--space-md);
    border: 1px dashed var(--border-hover);
    background: var(--bg-card);
  }

  .more-coming-text {
    font-size: var(--text-base);
    color: var(--text-dim);
    line-height: 1.7;
  }

  .linkedin-link {
    color: var(--gold);
    text-decoration: underline;
    text-underline-offset: 3px;
    transition: color var(--duration-fast);
  }

  .linkedin-link:hover {
    color: #ffcf5e;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero {
      padding-top: calc(var(--nav-height) + var(--space-lg));
    }

    .blog-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 480px) {
    .blog-card-meta {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }
  }
</style>
