---
// Global background: grid + orbs + noise + mouse spotlight
---

<div class="bg-effects" aria-hidden="true">
  <div class="bg-grid"></div>
  <div class="orb orb-1"></div>
  <div class="orb orb-2"></div>
  <div class="orb orb-3"></div>
  <div class="bg-noise"></div>
  <div class="spotlight"></div>
</div>

<style>
  .bg-effects {
    position: fixed;
    inset: 0;
    pointer-events: none;
    z-index: -1;
  }

  .bg-grid {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(rgba(255, 255, 255, 0.02) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255, 255, 255, 0.02) 1px, transparent 1px);
    background-size: 80px 80px;
    mask-image: linear-gradient(to bottom, rgba(0,0,0,1) 0%, rgba(0,0,0,0.2) 100%);
    -webkit-mask-image: linear-gradient(to bottom, rgba(0,0,0,1) 0%, rgba(0,0,0,0.2) 100%);
  }

  .orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(100px);
    animation: orbFloat 25s cubic-bezier(0.4, 0, 0.2, 1) infinite alternate;
  }

  .orb-1 {
    width: 800px;
    height: 800px;
    background: radial-gradient(circle, rgba(255, 193, 59, 0.08) 0%, transparent 60%);
    top: -200px;
    right: -200px;
  }

  .orb-2 {
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, rgba(0, 229, 255, 0.06) 0%, transparent 60%);
    bottom: -200px;
    left: -200px;
    animation-delay: -5s;
    animation-direction: alternate-reverse;
  }

  .orb-3 {
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, rgba(0, 255, 136, 0.04) 0%, transparent 60%);
    top: 40%;
    left: 40%;
    animation-delay: -10s;
  }

  @keyframes orbFloat {
    0% { transform: translate(0, 0) scale(1); }
    33% { transform: translate(50px, -50px) scale(1.1); }
    66% { transform: translate(-30px, 40px) scale(0.9); }
    100% { transform: translate(40px, 20px) scale(1.05); }
  }

  .bg-noise {
    position: absolute;
    inset: 0;
    background: var(--noise);
    opacity: 0.04;
    mix-blend-mode: overlay;
  }

  /* Mouse Spotlight */
  .spotlight {
    position: absolute;
    inset: 0;
    z-index: 1;
    transition: opacity 0.5s ease;
  }

  @media (prefers-reduced-motion: reduce) {
    .orb { animation: none; }
    .spotlight { display: none; }
  }
</style>

<script>
  function initSpotlight() {
    if (window.matchMedia('(prefers-reduced-motion: reduce)').matches) return;

    const spotlight = document.querySelector('.spotlight');
    if (!spotlight) return;

    // Skip on primarily touch devices (no fine pointer)
    if (!window.matchMedia('(pointer: fine)').matches) return;

    document.addEventListener('mousemove', (e) => {
      (spotlight as HTMLElement).style.background =
        `radial-gradient(650px circle at ${e.clientX}px ${e.clientY}px, rgba(255,193,59,0.15), transparent 40%)`;
    }, { passive: true });
  }

  initSpotlight();
  document.addEventListener('astro:after-swap', initSpotlight);
</script>
