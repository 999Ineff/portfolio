---
interface Props {
  text: string;
  color?: 'gold' | 'cyan' | 'green';
}

const { text, color = 'gold' } = Astro.props;
---

<div class={`section-label section-label--${color} reveal`}>
  <span class="section-label-text">{text}</span>
</div>

<style>
  .section-label {
    display: inline-block;
    margin-bottom: 1.5rem;
  }

  .section-label-text {
    font-family: 'JetBrains Mono', monospace;
    font-size: var(--text-xs);
    font-weight: 500;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    padding: 0.5rem 1.25rem;
    border: 1px solid var(--border-hover);
  }

  .section-label--gold .section-label-text {
    color: var(--gold);
    border-color: rgba(255, 193, 59, 0.2);
  }

  .section-label--cyan .section-label-text {
    color: var(--cyan);
    border-color: rgba(0, 229, 255, 0.2);
  }

  .section-label--green .section-label-text {
    color: var(--green);
    border-color: rgba(0, 255, 136, 0.2);
  }
</style>
