---
const currentYear = new Date().getFullYear();
const footerLinks = [
  { label: 'Custom Automation', href: '/automation' },
  { label: 'Tailored Websites', href: '/websites' },
  { label: 'Custom Platforms', href: '/platforms' },
  { label: 'Consulting', href: '/consulting' },
  { label: 'Blog', href: '/blog' },
  { label: 'Resources', href: '/resources' },
  { label: 'Free Tools', href: '/tools' },
];
---

<footer class="footer">
  <div class="footer-content container">
    <div class="footer-top">
      <div class="footer-brand">
        <a href="/" class="footer-logo">
          <span class="logo-dot"></span>
          <span>Ineffable</span>
        </a>
        <p class="footer-tagline">Custom Software. Tailored Websites. Zero Busywork.</p>
      </div>

      <nav class="footer-nav" aria-label="Footer navigation">
        <div class="footer-col">
          <h4 class="footer-col-title">Services</h4>
          {footerLinks.slice(0, 4).map(link => (
            <a href={link.href} class="footer-link">{link.label}</a>
          ))}
        </div>
        <div class="footer-col">
          <h4 class="footer-col-title">More</h4>
          {footerLinks.slice(4).map(link => (
            <a href={link.href} class="footer-link">{link.label}</a>
          ))}
          <a href="https://calendly.com/luis-aviles-khn" class="footer-link" target="_blank" rel="noopener">Book a Call</a>
        </div>
        <div class="footer-col">
          <h4 class="footer-col-title">Connect</h4>
          <a href="https://www.linkedin.com/in/luis-aviles-0b969235a/" class="footer-link" target="_blank" rel="noopener">LinkedIn</a>
        </div>
      </nav>
    </div>

    <div class="footer-divider"></div>

    <div class="footer-bottom">
      <p class="footer-copy">&copy; {currentYear} Ineffable. All rights reserved.</p>
      <p class="footer-credit font-mono">Built with precision.</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    border-top: 1px solid var(--border);
    padding: var(--space-lg) 0 var(--space-md);
    background: var(--bg-dark);
  }

  .footer-top {
    display: flex;
    justify-content: space-between;
    gap: var(--space-lg);
  }

  .footer-brand {
    max-width: 300px;
  }

  .footer-logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-family: 'JetBrains Mono', monospace;
    font-weight: 600;
    font-size: 1rem;
    color: var(--gold);
    text-decoration: none;
    margin-bottom: 0.75rem;
  }

  .footer-logo .logo-dot {
    width: 8px;
    height: 8px;
    background: var(--gold);
    border-radius: 2px;
  }

  .footer-tagline {
    font-size: var(--text-sm);
    color: var(--text-dim);
    line-height: 1.6;
  }

  .footer-nav {
    display: flex;
    gap: var(--space-lg);
  }

  .footer-col {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .footer-col-title {
    font-family: 'JetBrains Mono', monospace;
    font-size: var(--text-xs);
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--text);
    margin-bottom: 0.5rem;
  }

  .footer-link {
    font-size: var(--text-sm);
    color: var(--text-dim);
    text-decoration: none;
    transition: color 0.2s;
  }

  .footer-link:hover {
    color: var(--gold);
  }

  .footer-divider {
    height: 1px;
    background: var(--border);
    margin: var(--space-md) 0;
  }

  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .footer-copy {
    font-size: var(--text-xs);
    color: var(--text-muted);
  }

  .footer-credit {
    font-size: var(--text-xs);
    color: var(--text-muted);
    letter-spacing: 0.05em;
  }

  @media (max-width: 768px) {
    .footer-top {
      flex-direction: column;
      gap: var(--space-md);
    }
    .footer-nav {
      flex-wrap: wrap;
      gap: var(--space-md);
    }
    .footer-bottom {
      flex-direction: column;
      gap: 0.5rem;
      text-align: center;
    }
  }
</style>
