---
const currentYear = new Date().getFullYear();
const footerLinks = [
  { label: 'Custom Automation', href: '/automation' },
  { label: 'Tailored Websites', href: '/websites' },
  { label: 'Custom Platforms', href: '/platforms' },
  { label: 'Consulting', href: '/consulting' },
  { label: 'Blog', href: '/blog' },
  { label: 'Resources', href: '/resources' },
  { label: 'Free Tools', href: '/tools' },
];
---

<footer class="footer">
  <div class="footer-content container">
    <div class="footer-top">
      <div class="footer-brand">
        <a href="/" class="footer-logo">
          <span class="logo-dot"></span>
          <span>Ineffable</span>
        </a>
        <p class="footer-tagline">Custom Software. Tailored Websites. Zero Busywork.</p>
      </div>

      <nav class="footer-nav" aria-label="Footer navigation">
        <div class="footer-col">
          <h4 class="footer-col-title">Services</h4>
          {footerLinks.slice(0, 4).map(link => (
            <a href={link.href} class="footer-link">{link.label}</a>
          ))}
        </div>
        <div class="footer-col">
          <h4 class="footer-col-title">More</h4>
          {footerLinks.slice(4).map(link => (
            <a href={link.href} class="footer-link">{link.label}</a>
          ))}
          <a href="https://calendly.com/luis-aviles-khn" class="footer-link" target="_blank" rel="noopener">Book a Call</a>
        </div>
        <div class="footer-col">
          <h4 class="footer-col-title">Connect</h4>
          <a href="https://www.linkedin.com/in/luis-aviles-0b969235a/" class="footer-link" target="_blank" rel="noopener">LinkedIn</a>
        </div>
      </nav>
    </div>

    <div class="footer-divider"></div>

    <div class="footer-bottom">
      <p class="footer-copy">&copy; {currentYear} Ineffable. All rights reserved.</p>
      <p class="footer-credit font-mono">Built with precision.</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    padding: var(--space-2xl) 0 var(--space-md);
    background: var(--bg-deep);
    position: relative;
    overflow: hidden;
  }

  .footer::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(255, 193, 59, 0.3), transparent);
  }

  /* Add a subtle top glow */
  .footer::after {
    content: '';
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 60%;
    height: 200px;
    background: radial-gradient(ellipse at top, rgba(255, 193, 59, 0.05) 0%, transparent 70%);
    pointer-events: none;
  }

  .footer-top {
    display: flex;
    justify-content: space-between;
    gap: var(--space-lg);
    position: relative;
    z-index: 2;
  }

  .footer-brand {
    max-width: 400px;
  }

  .footer-logo {
    display: flex;
    align-items: center;
    gap: 1rem;
    font-size: var(--text-2xl);
    font-weight: 900;
    color: var(--text);
    text-decoration: none;
    margin-bottom: 1.5rem;
    letter-spacing: -0.02em;
  }

  .footer-logo .logo-dot {
    width: 12px;
    height: 12px;
    background: var(--gold);
    border-radius: 50%;
    box-shadow: 0 0 15px rgba(255, 193, 59, 0.5);
  }

  .footer-tagline {
    font-size: var(--text-lg);
    color: var(--text-dim);
    line-height: 1.6;
    font-weight: 300;
  }

  .footer-nav {
    display: flex;
    gap: 5rem;
  }

  .footer-col {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .footer-col-title {
    font-family: 'JetBrains Mono', monospace;
    font-size: var(--text-xs);
    font-weight: 600;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--gold);
    margin-bottom: 1rem;
  }

  .footer-link {
    font-size: var(--text-base);
    color: var(--text-secondary);
    text-decoration: none;
    transition: all 0.3s var(--ease-out);
    position: relative;
    display: inline-block;
    width: fit-content;
  }

  .footer-link::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 1px;
    background: var(--gold);
    transition: width 0.3s var(--ease-spring);
  }

  .footer-link:hover {
    color: var(--text);
    transform: translateX(4px);
  }

  .footer-link:hover::after {
    width: 100%;
  }

  .footer-divider {
    height: 1px;
    background: rgba(255, 255, 255, 0.05);
    margin: var(--space-lg) 0 var(--space-md);
  }

  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .footer-copy {
    font-size: var(--text-sm);
    color: var(--text-muted);
  }

  .footer-credit {
    font-size: var(--text-xs);
    color: var(--text-muted);
    letter-spacing: 0.1em;
    text-transform: uppercase;
  }

  @media (max-width: 1024px) {
    .footer-nav { gap: 3rem; }
  }

  @media (max-width: 768px) {
    .footer-top {
      flex-direction: column;
      gap: var(--space-xl);
    }
    .footer-nav {
      flex-wrap: wrap;
      gap: var(--space-lg);
      justify-content: space-between;
    }
    .footer-col {
      min-width: 140px;
    }
    .footer-bottom {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }
  }
</style>
